{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": ["vite/client", "node", "@storybook/types"],
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "$/*": ["src/context/*"],
      "@/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    ".storybook/*.ts",
    "scripts/*.ts",
    "src/i18next.d.ts"
  ]
}
